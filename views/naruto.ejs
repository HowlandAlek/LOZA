<%- include ("./templates/header") %>

    <section class="encabezado-coleccion cover-coleccion-naruto contenedor-body">
        <h2>NARUTO</h2>
    </section>

    <section class="contenedor-body">
        <div class="filtro-productos d-flex-center">
            <p>Filtrar por:</p>
            <a href= "/naruto" class="btn btn-info" style="margin-right: 15px;"> Relevancia</a>
            <a href= "/naruto/p1"  class="btn btn-info" style="margin-right: 15px;"> Precio - Más alto a más bajo</a>
            <a href= "/naruto/p2"  class="btn btn-info" style="margin-right: 15px;"> Precio - Más bajo a más alto</a>
            <a href= "/naruto/alf"  class="btn btn-info" style="margin-right: 15px;"> Alfabético</a>
        </div>
        
        <div class="grid-productos">
            <%  for(var i = 0; i<productos.length; i++)  {            %>

                <div class="producto">
                    <a href="/producto/<%= productos[i]._id  %>"> <img src="https://drive.google.com/uc?export=view&id=<%= productos[i].Img_Id%>" alt=""></a>

                    <div class="descripcion-producto">
                        <span class="coleccion-producto"> <%= productos[i].Collection_Name  %></span>
                        <p>
                            <%= productos[i].Name  %>
                        </p>
                        <b>$<%= productos[i].Price  %>.00</b>
                    </div>
                </div>
                <%  }          %>
        </div>
    </section>

    <%- include ("./templates/footer") %>