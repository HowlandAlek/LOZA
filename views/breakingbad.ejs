<%- include ("./templates/header") %>

    <section class="encabezado-coleccion cover-coleccion-breakingbad contenedor-body">
        <h2>BREAKING BAD</h2>
    </section>

    <section class="contenedor-body">
        <div class="filtro-productos d-flex-center">
            <p>Filtrar por:</p>
            <select name="filtro" id="filtroBrBa">
            <option class="brbaOp" value="relevancia">Relevancia</option>
            <option class="brbaOp" value="precio-alto">Precio - Más alto a más bajo</option>
            <option class="brbaOp" value="precio-bajo">Precio - Más bajo a más alto</option>
            <option class="brbaOp" value="alfabetico">Alfabético</option>
        </select>
        </div>
        <div class="grid-productos">
            <%  for(var i = 0; i<productos.length; i++)  {            %>

                <div class="producto">
                    <a href="#"> <img src="https://drive.google.com/uc?export=view&id=<%= productos[i].Img_Id%>" alt=""></a>

                    <div class="descripcion-producto">
                        <span class="coleccion-producto"> <%= productos[i].Collection_Name  %></span>
                        <p>
                            <%= productos[i].Name  %>
                        </p>
                        <b>$<%= productos[i].Price  %>.00</b>
                    </div>
                </div>
                <%  }          %>
        </div>
    </section>

    <%- include ("./templates/footer") %>