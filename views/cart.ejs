<%- include ("./templates/header") %>

<link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
    crossorigin="anonymous"
/>
<link rel="stylesheet" href="/css/style_cart_page.css" />

<div id="titulo-carrito">
    <h1>Carrito de compras</h1>
</div>
<div class="cart-container">
    <div class="products-container">
        <% for(var i = 0; i< cart.length; i++) { %>
        <div class="product-card">
            <div class="product-card-content">
                <div class="card-img-container">
                    <img
                        src="https://drive.google.com/uc?export=view&id=<%= cart[i].img_id%>"
                        style="width: 500px; max-width: 100%; height: auto"
                        alt="foto"
                    />
                </div>
                <div class="card-controls">
                    <h1><%= cart[i].Name %></h1>
                    <h2>$ <%= cart[i].Price %>.00 MXN</h2>
                    <a
                        href="/cart/delete/<%= cart[i].Id%>"
                        class="btn btn-danger"
                    >
                        Eliminar</a
                    >
                </div>
            </div>
        </div>
        <% } %>
    </div>
    <div class="cart-controls">
        <div class="cart-controls-card">
            <div class="cart-controls-content">
                <h1 style="text-align: center; color: #1b263b">
                    Resumen del pedido
                </h1>
                <h3>Número de artículos: <%= cart.length %></h3>
                <h1><strong>$<%= total %>.00 MXN</strong></h1>
                <h2>Entregar a:</h2>
                <h4>
                    52926, Blvd. Cuautitlán Izcalli Atizapán 17, Margarita Maza
                    de Juárez, Cd López Mateos, Méx.
                </h4>
                <button type="button" class="btn btn-success">
                    Confirmar pedido
                </button>
            </div>
        </div>
    </div>
</div>
<script
    src="https://code.jquery.com/jquery-3.6.0.js"
    integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
    crossorigin="anonymous"
></script>

<%- include ("./templates/footer") %>
