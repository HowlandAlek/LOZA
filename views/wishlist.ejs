        <input type="radio" name = "radio-button" id = "image5">
        
        <%  for(var i = 0; i<4; i++)  {   %>
        <div class = "image-slide s1">
            <img src = "img/JIraiyaOnToad.PNG" onclick="OpenPopUp(this)">
