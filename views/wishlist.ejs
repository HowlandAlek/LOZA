</div>


<div class = "popUp" id= "popUPID">
    <div id = "close" onclick="CerrarPopUp(this)">
        <img src="img/cancel.png">
    </div>
    <!--Aqui vamos a agregar la vista en galeria--> 
    <div class = "product" id = "productID">
        <div class="product-small-img">
            <img src="" id = "same-img" onclick="ChangeFunction(this)">
            <img src = "" id = "diff-img" onclick="ChangeFunction(this)">
        </div>

        <div class="img-container">
            <img src="" id = "imageBox">
        </div>
    </div>

    <div class = "info">
        <h1 id = "popName"></h1>
    </div>

    <script>
        function ChangeFunction(smallImg){
            var bigImg = document.getElementById("imageBox");
            bigImg.src = smallImg.src;
            var c = bigImg.src.slice(26, bigImg.length).slice(-5).slice(0,1);
            if(c === 'x'){
                document.getElementById("productID").style.width = "80%"
                bigImg.style.width = "350px";
            }else{
                document.getElementById("productID").style.width = "70%"
                bigImg.style.width = "290px";
            }
            console.log(c);
        }
    </script>


</div>
<script>

        function OpenPopUp(img, product){

            document.getElementById("popUPID").style.display="block";

            // Guardamos el src de la imagen que clickeamos
            var tsrc = img.src;

            // El unico jpg es jiraiya box
            console.log(tsrc);
            console.log(tsrc.length)
            console.log(tsrc.slice(26, tsrc.length));

            if(tsrc.slice(26, tsrc.length-4) === "JIraiyaOnToad"){
                var ttsrc = "img/" + tsrc.slice(26, tsrc.length-4) + "_Box.jpg";
            }else{
                var ttsrc = "img/" + tsrc.slice(26, tsrc.length-4) + "_Box.PNG";
            }
        
            console.log(ttsrc);

            document.getElementById("imageBox").src = tsrc;
            document.getElementById("same-img").src = tsrc;
            document.getElementById("diff-img").src = ttsrc;

            // document.getElementById("popName").textContent = tsrc.slice(26, tsrc.length-4) + ": $399.99";
            document.getElementById("popName").textContent = "Price: $599"
        }


        function CerrarPopUp(crr){
            document.getElementById("popUPID").style.display="none";
        }

    </script>

</main>

